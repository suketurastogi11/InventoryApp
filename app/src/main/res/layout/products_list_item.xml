<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/products_list_item_padding"
    android:background="@color/products_list_item_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/products_name_list_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/products_list_item_value_margin"
            android:layout_weight="6"
            android:gravity="center"
            android:textColor="@color/products_list_item"
            android:textSize="@dimen/products_list_item"
            android:textStyle="bold"
            tools:text="Name of the product" />

        <TextView
            android:id="@+id/products_quantity_list_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="@dimen/products_list_item_value_margin"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/products_list_item_value_left_margin"
            android:textColor="@color/products_list_item"
            android:textSize="@dimen/products_list_item"
            tools:text="Quantity : 80" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/price_list_item_top_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/products_price_list_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/products_list_item_value_margin"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@color/products_list_item"
            android:textSize="@dimen/products_list_item"
            android:textStyle="bold"
            tools:text="Price : 100" />

        <TextView
            android:id="@+id/products_sale_list_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="@dimen/products_list_item_value_margin"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/products_list_item_value_left_margin"
            android:textColor="@color/products_list_item"
            android:textSize="@dimen/products_list_item"
            tools:text="Sale : 20" />

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_sale_button_text"
        android:id="@+id/track_sale_list_item_button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>